# SentinelGRC Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=SentinelGRC
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentinelgrc
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_SSL=false

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================
# AI Services (at least one required for AI features)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ============================================
# SECURITY CONFIGURATION
# ============================================
SECRET_KEY=generate_random_32_byte_hex_string
JWT_SECRET=generate_another_random_32_byte_hex_string
ENCRYPTION_KEY=generate_third_random_32_byte_hex_string
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
RATE_LIMIT=60  # requests per minute
SESSION_TIMEOUT=30  # minutes
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=12
REQUIRE_MFA=false

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
ENABLE_METRICS=true
ENABLE_TRACING=false
CACHE_TTL=3600  # seconds

# ============================================
# COMPLIANCE FRAMEWORK CONFIGURATION
# ============================================
DEFAULT_FRAMEWORK=essential8
CONFIDENCE_THRESHOLD=0.7
HUMAN_REVIEW_THRESHOLD=0.6
ENABLE_SIDECARS=true
ENABLE_THREAT_MODELING=true
ENABLE_LEGAL_REVIEW=true
ENABLE_PDF_GENERATION=true
ENABLE_ISMS_ENGINE=true

# ============================================
# OWASP SECURITY FEATURES (ALL VERSIONS)
# ============================================
ENABLE_OWASP_WEB_TOP10=true       # Web application security
ENABLE_OWASP_MOBILE_TOP10=true    # Mobile app security
ENABLE_OWASP_API_TOP10=true       # API security
ENABLE_OWASP_LLM_TOP10=true       # AI/LLM security

# ============================================
# USER CUSTOMIZATION OPTIONS
# ============================================
ALLOW_FRAMEWORK_SELECTION=true     # Let users choose frameworks
ALLOW_PENTEST_TYPE_SELECTION=true  # Let users choose pentest types
ALLOW_SPEED_VS_THOROUGHNESS=true   # Speed/thoroughness slider
DEFAULT_SCAN_MODE=balanced         # fast, balanced, thorough

# ============================================
# PENETRATION TESTING INTEGRATION
# ============================================
ENABLE_PENTEST_INTEGRATION=true
PENTEST_TYPES=web,mobile,api,infrastructure,cloud,social
PENTEST_API_ENDPOINT=http://localhost:9000
PENTEST_API_KEY=your_pentest_api_key_here

# ============================================
# PLATFORM SELF-DEFENSE
# ============================================
ENABLE_PLATFORM_SELF_DEFENSE=true
ENABLE_INTRUSION_DETECTION=true
ENABLE_ANOMALY_DETECTION=true
MAX_REQUEST_SIZE=10485760  # 10MB
BLOCKED_USER_AGENTS=bot,crawler,scanner,sqlmap,nikto
BLOCK_TOR_EXIT_NODES=false
ENABLE_WAF=true
